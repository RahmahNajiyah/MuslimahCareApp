<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.rahmahnajiyahimtihan.muslimahcare.MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="cek kulit"
        android:id="@+id/btncek"
        android:background="#FCE4EC"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="#FCE4EC"
        android:text="treatment tambahan"
        android:id="@+id/btntambahan"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="#FCE4EC"
       android:layout_alignParentBottom="true"
        android:text="langkah di\n pagi hari"
        android:id="@+id/btnpagi"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text="langkah di\n malam hari"
        android:background="#FCE4EC"
        android:id="@+id/btnmalem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="30dp"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/iconcare"
        android:id="@+id/btnkenali"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>




</RelativeLayout>
